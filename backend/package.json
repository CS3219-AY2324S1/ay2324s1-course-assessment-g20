  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "format": "prettier --write \"./**/*.ts\"",
    "format:ci": "prettier --list-different \"./**/*.ts\"",
    "lint": "eslint \"./**/*.ts\" --fix",
    "lint:ci": "eslint \"./**/*.ts\"",
    "test": "cd gateway; yarn test:e2e --force-exit",
    "build": "cd gateway; yarn build; cd ../question; yarn build",
    "prepare": "cd .. && husky install backend/.husky"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
