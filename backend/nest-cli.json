{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/http-gateway/src",
  "monorepo": true,
  "root": "apps/http-gateway",
  "compilerOptions": {
    "webpack": true,
    "tsConfigPath": "apps/http-gateway/tsconfig.app.json",
    "assets": [
      "**/*.proto"
    ],
    "watchAssets": true
  },
  "projects": {
    "http-gateway": {
      "type": "application",
      "root": "apps/http-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/http-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/http-gateway/tsconfig.app.json",
        "assets": [
          "../../../libs/microservice/src/interservice-proto/**/*"
        ],
        "watchAssets": true
      }
    },
    "question": {
      "type": "application",
      "root": "apps/question",
      "entryFile": "main",
      "sourceRoot": "apps/question/src",
      "compilerOptions": {
        "tsConfigPath": "apps/question/tsconfig.app.json",
        "assets": [
          "../../../libs/microservice/src/interservice-proto/**/*"
        ],
        "watchAssets": true
      }
    },
    "user": {
      "type": "application",
      "root": "apps/user",
      "entryFile": "main",
      "sourceRoot": "apps/user/src",
      "compilerOptions": {
        "tsConfigPath": "apps/user/tsconfig.app.json",
        "assets": [
          "../../../libs/microservice/src/interservice-proto/**/*"
        ],
        "watchAssets": true
      }
    },
    "config": {
      "type": "library",
      "root": "libs/config",
      "entryFile": "index",
      "sourceRoot": "libs/config/src",
      "compilerOptions": {
        "tsConfigPath": "libs/config/tsconfig.lib.json"
      }
    },
    "sql-database": {
      "type": "library",
      "root": "libs/sql-database",
      "entryFile": "index",
      "sourceRoot": "libs/sql-database/src",
      "compilerOptions": {
        "tsConfigPath": "libs/sql-database/tsconfig.lib.json"
      }
    },
    "types": {
      "type": "library",
      "root": "libs/types",
      "entryFile": "index",
      "sourceRoot": "libs/types/src",
      "compilerOptions": {
        "tsConfigPath": "libs/types/tsconfig.lib.json"
      }
    },
    "microservice": {
      "type": "library",
      "root": "libs/microservice",
      "entryFile": "index",
      "sourceRoot": "libs/microservice/src",
      "compilerOptions": {
        "tsConfigPath": "libs/microservice/tsconfig.lib.json"
      }
    },
    "utils": {
      "type": "library",
      "root": "libs/utils",
      "entryFile": "index",
      "sourceRoot": "libs/utils/src",
      "compilerOptions": {
        "tsConfigPath": "libs/utils/tsconfig.lib.json"
      }
    },
    "mocks": {
      "type": "library",
      "root": "libs/mocks",
      "entryFile": "index",
      "sourceRoot": "libs/mocks/src",
      "compilerOptions": {
        "tsConfigPath": "libs/mocks/tsconfig.lib.json"
      }
    }
  }
}
